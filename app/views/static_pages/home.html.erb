<% provide :title, t(".title") %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t ".feed_title" %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t ".welcome" %></h1>
    <h2>
      <%= t ".first_intro" %>
      <%= link_to t("rails_tutorial_name"), Settings.links.rails_tutorial_org %>
      <%= t ".second_intro" %>
    </h2>
    <% if logged_in? %>
      <%= current_user.name %>
    <% else %>
      <%= link_to t(".sign_up"), signup_path, class: "btn btn-lg btn-primary" %>
    <% end %>
  </div>
  <%= link_to image_tag("rails.svg", alt: "Rails logo", class: "home-logo"), Settings.links.ruby_on_rails %>
<% end %>
